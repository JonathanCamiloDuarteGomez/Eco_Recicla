<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".MainActivity">
    <!--Logo de la app-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="EcoRecicla"
        android:layout_marginTop="100dp"
        />


    <EditText
        android:id="@+id/EditTextCorreo"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@android:color/white"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/EditTextPassword"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_below="@id/EditTextCorreo" />

    <Button
        android:id="@+id/btnInicia_sesion"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#009E0F"
        android:text="Iniciar Sesión"
        android:textAlignment="center"
        android:layout_below="@id/EditTextPassword" />

    <CheckBox
        android:id="@+id/cehckBox_guardaContrasena"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Guardar Contraseña"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_below="@id/btnInicia_sesion" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/cehckBox_guardaContrasena">

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="16dp"
            android:background="#008E2C2C"
            android:text="Registrarme"
            android:textAlignment="center"
            android:textColor="#009E0F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOlvContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="#00CC1A1A"
            android:padding="10dp"
            android:text="Olvidé Mi\nContraseña"
            android:textAlignment="center"
            android:textColor="#009E0F"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>
