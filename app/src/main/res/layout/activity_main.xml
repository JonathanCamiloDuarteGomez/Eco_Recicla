<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frontapp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/inicia_sesion"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="Iniciar Sesion"
        android:textAlignment="center"
        android:backgroundTint="#009E0F" />

    <EditText
        android:id="@+id/EditTextCorreo"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/EditPassword"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <CheckBox
        android:id="@+id/guardaContrasena"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="Guardar Contraseña"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/olvContra"
        android:layout_width="230dp"
        android:layout_height="34dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="650dp"
        android:text="Olvide Mi Contraseña"
        android:textColor="#009E0F"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/registra"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="650dp"
        android:text="Registrarme"
        android:textColor="#274E13"
        android:textSize="20sp" />

</RelativeLayout>
