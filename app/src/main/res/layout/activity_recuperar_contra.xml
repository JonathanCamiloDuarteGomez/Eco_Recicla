<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".RecuperarContrasena">


    <Button
        android:id="@+id/btnIrAloginRegistrar"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="80dp"
        android:background="#00F0EEF4"
        android:drawableLeft="@drawable/leave"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/EditTextCorreo"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/EditTextContras"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:hint="Contraeña"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/EditTextContras_Repeticion"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:hint="Repita la Contraseña"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/EditTextNombre"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/white"
        android:hint="Nombre"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnRecContrasena"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_above="@+id/btnIrAloginRegistrar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#009E0F"
        android:text="Recuperar Contraseña"
        android:textAlignment="center" />

</RelativeLayout>